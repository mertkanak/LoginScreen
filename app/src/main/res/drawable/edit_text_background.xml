<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Odaklanmış durumda -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFEB3B"/> <!-- Odaklanmışken sarı arka plan -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#FBC02D"/> <!-- Çerçeve rengi -->
        </shape>
    </item>

    <!-- Odaklanmamış durumda -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Odaklanmamışken beyaz arka plan -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#BDBDBD"/> <!-- Çerçeve rengi -->
        </shape>
    </item>
</selector>
